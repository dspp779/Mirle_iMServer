<Controls:MetroWindow
    x:Class="Mirle_GPLC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:GMap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
    xmlns:Mirle_GPLC="clr-namespace:Mirle_GPLC"
    xmlns:GplcControls="clr-namespace:Mirle_GPLC.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    Icon="Mirle.logo.ico"
    ShowIconOnTitleBar="False"
    Title="Mirle GPLC" Width="960" Height="600" MinWidth="960" MinHeight="600"
    WindowStartupLocation="CenterScreen"
    GlowBrush="{DynamicResource AccentColorBrush}"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Mirle_GPLC:MainWindowViewModel}"
    Loaded="Window_Loaded" Closing="MetroWindow_Closing" Background="{DynamicResource Background}" ShowWindowCommandsOnTop="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Mirle_GPLC;component/Resources/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatSlider.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Mirle_GPLC;component/Styles/VS/TabControl.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Mirle_GPLC;component/Styles/VS/Menu.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Mirle_GPLC;component/Styles/VS/ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Mirle_GPLC;component/Styles/VS/ScrollBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ListBox" BasedOn="{StaticResource StandardListBox}" />
            <Style TargetType="TabControl" BasedOn="{StaticResource StandardTabControl}" />
            <Style TargetType="MenuItem" BasedOn="{StaticResource StandardMenuItem}" />
            <Style TargetType="Menu" BasedOn="{StaticResource StandardMenu}" />

            <Ellipse x:Key="AccentMenuIcon"
                     x:Shared="False"
                     Width="16"
                     Height="16"
                     Fill="{Binding ColorBrush, Mode=OneWay}" />
            <Style x:Key="AccentColorMenuItemStyle"
                   TargetType="{x:Type MenuItem}"
                   BasedOn="{StaticResource StandardMenuItem}">
                <Setter Property="Command"
                        Value="{Binding ChangeAccentCommand}" />
                <Setter Property="Icon"
                        Value="{StaticResource AccentMenuIcon}" />
                <Setter Property="Header"
                        Value="{Binding Name, Mode=OneWay}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout Name="projectFlyout" Header="ProjectView" Position="Right"
                             IsModal="False" MinWidth="300" Width="300" Theme="Adapt" IsOpenChanged="projectFlyout_IsOpenChanged">

                <Grid Margin="10,-15,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TextBlock Name="textBlock_projectAddr" Margin="55,0,10,0" TextWrapping="Wrap" Text="projectAddress" VerticalAlignment="Top" FontSize="14" Height="19"/>

                    <DataGrid CanUserAddRows="False" AutoGenerateColumns="False"
                              BorderBrush="Black" BorderThickness="1"
                              Name="projectTagTable" Margin="10,10" Grid.Row="1" ColumnWidth="*"
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                              ItemsSource="{Binding DataSource}" HorizontalScrollBarVisibility="Hidden">
                        <DataGrid.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander IsExpanded="True">
                                                        <Expander.Style>
                                                            <Style TargetType="{x:Type Expander}">
                                                                <Setter Property="Background" Value="LightSteelBlue"/>
                                                                <Setter Property="Foreground" Value="Black"/>
                                                            </Style>
                                                        </Expander.Style>
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal" Margin="0">
                                                                <TextBlock Text="站位" Margin="0 2 5 2"/>
                                                                <TextBlock Text="{Binding Name}" Margin="5 2 5 2"/>
                                                                <TextBlock Text=":" Margin="0 2 5 2"/>
                                                                <TextBlock Text="{Binding ItemCount}" Margin="0 2 0 2"/>
                                                                <TextBlock Text=" 點位" Margin="0 2 5 2"/>
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <ItemsPresenter />
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </DataGrid.GroupStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header=" " IsReadOnly="True" Width="10"/>
                            <DataGridTextColumn Header="點位名稱" IsReadOnly="True" Binding="{Binding Path=LogName}" Width="100"/>
                            <DataGridTextColumn Header="監測值" IsReadOnly="True" Binding="{Binding Path=Value}" Width="100"/>
                            <DataGridTextColumn IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBox Name="textBox_searchTag" Controls:TextboxHelper.Watermark="搜尋點位..."
                         Controls:TextboxHelper.ClearTextButton="True"
                         Controls:TextboxHelper.ButtonCommand="{Binding TextBoxButtonCmd, Mode=OneWay}" Margin="10,0,0,10" Width="200" HorizontalAlignment="Left" Height="26" VerticalAlignment="Bottom" Grid.Row="2" TextChanged="textBox_searchTag_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}"
                               BasedOn="{StaticResource SearchMetroTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Controls:TextboxHelper.HasText"
                                         Value="True">
                                        <Setter Property="Controls:TextboxHelper.ButtonTemplate"
                                            Value="{DynamicResource ChromelessButtonTemplate}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

    <Controls:MetroContentControl>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1058*" />
            </Grid.ColumnDefinitions>
            <ListBox HorizontalAlignment="Left" Margin="0,36,0,0" Name="projectListView" Width="200" FontSize="16" Grid.Row="1" PreviewMouseDown="projectListView_PreviewMouseDown" SelectionChanged="projectListView_SelectionChanged"/>
            <Controls:Planerator HorizontalAlignment="Left" Margin="1395,-19,-643,0" Name="planerator1" VerticalAlignment="Top" Grid.Column="1" Height="0" Width="0" />
            <Controls:MetroAnimatedTabControl Name="tabControl_main" Grid.Column="1" Grid.RowSpan="2" Background="{DynamicResource Background}">
                <TabItem Header="地圖瀏覽" Name="tabItem_map">
                    <Grid>
                        <GMap:GMapControl Margin="0,0,0,0" Name="gMap" MaxZoom="20" MinZoom="3" MouseWheelZoomType="MousePositionWithoutCenter" OnMapTypeChanged="gMap_OnMapTypeChanged" />
                        <GplcControls:DeviceSimpleView x:Name="projectSimpleView" HorizontalAlignment="Right" Width="232" Margin="0,130,10,160" />
                    </Grid>
                </TabItem>
                <TabItem Header="設定" Name="setting">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition Height="50" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox Height="26" Name="comboBox_maptype" Width="150"
                                  Margin="71,5,0,0" Grid.Column="1" Grid.Row="1"
                                  HorizontalAlignment="Left" VerticalAlignment="Top"
                                  ItemsSource="{Binding GMapProviderList}">
                            <ComboBox.SelectedItem>
                                <Binding Path="MapProvider" ElementName="gMap"/>
                            </ComboBox.SelectedItem>
                        </ComboBox>
                        <Menu Margin="240,5,452,19" Grid.ColumnSpan="2" Grid.Row="1" Background="{DynamicResource Background}">
                            <MenuItem Name="AccentMenu" Header="主題顏色" ItemsSource="{Binding AccentColors, Mode=OneWay}"
                        		ItemContainerStyle="{StaticResource AccentColorMenuItemStyle}" Height="26" />
                        </Menu>
                        <TextBlock x:Name="textBlock_maptype" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="地圖類型" VerticalAlignment="Top"/>
                        <Expander Grid.ColumnSpan="2" Header="編輯站位" Margin="10" Grid.Row="2" IsExpanded="True">
                            <Grid>
                                <GplcControls:DeviceEditControl x:Name="deviceEditControl"
                                    Foreground="{DynamicResource IdealForegroundColorBrush}"
                                    Margin="10" Height="Auto" Width="auto" />
                            </Grid>
                        </Expander>
                    </Grid>
                </TabItem>
            </Controls:MetroAnimatedTabControl>
            <TextBox Height="26" Name="textBox_searchProject" VerticalAlignment="Top" Controls:TextboxHelper.Watermark="搜尋專案..."
                         Controls:TextboxHelper.ClearTextButton="True"
                         Controls:TextboxHelper.ButtonCommand="{Binding TextBoxButtonCmd, Mode=OneWay}" Margin="10,5,10,0" TextChanged="textBox_searchProject_TextChanged" Grid.Row="1">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}"
                               BasedOn="{StaticResource SearchMetroTextBox}">
                        <Style.Triggers>
                            <Trigger Property="Controls:TextboxHelper.HasText"
                                         Value="True">
                                <Setter Property="Controls:TextboxHelper.ButtonTemplate"
                                            Value="{DynamicResource ChromelessButtonTemplate}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>
    </Controls:MetroContentControl>
</Controls:MetroWindow>
