<UserControl x:Class="Mirle_GPLC.Controls.ProjectMarkerTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{DynamicResource WindowTitleColorBrush}" Foreground="{DynamicResource IdealForegroundColorBrush}"
    Height="auto" Width="auto" IsHitTestVisible="False">
    <Grid>
        <TextBlock x:Name="textblock_ProjectName" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run Language="zh-tw" Text="ProjectName"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,36,10,10" TextWrapping="Wrap" Width="60"><Run Language="zh-tw" Text="裝置數量："/></TextBlock>
        <TextBlock x:Name="textBlock_DeviceNum" HorizontalAlignment="Left" Margin="75,36,10,10" TextWrapping="Wrap" Text="DeviceNum" Width="66"/>

    </Grid>
</UserControl>
